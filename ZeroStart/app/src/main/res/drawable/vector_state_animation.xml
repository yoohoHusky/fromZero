<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="NewApi">
    <item
        android:id="@+id/state_on"
        android:drawable="@drawable/ic_twitter"
        android:state_checked="true" />
    <item
        android:id="@+id/state_off"
        android:drawable="@drawable/ic_heart"
        />

    <transition
        android:fromId="@id/state_on"
        android:toId="@id/state_off"
        android:drawable="@drawable/vector_twitter_to_heart"/>

    <transition
        android:fromId="@id/state_off"
        android:toId="@id/state_on"
        android:drawable="@drawable/vector_heart_to_twitter"
        />

</animated-selector>