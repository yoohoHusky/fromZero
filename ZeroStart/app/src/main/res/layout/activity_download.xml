<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yooho.zerostart.DownloadModelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模仿下载模块"/>

        <com.example.yooho.zerostart.ui.view.processbar.GlitterProcessBar
            android:id="@+id/glitterProcess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:glitterTextSize="15sp"
            app:glitterLoadingColor="#40c4ff"
            app:glitterStopColor="#ff9800"
            android:layout_marginTop="10dp"
            />
        <com.example.yooho.zerostart.ui.view.processbar.MyGlitterProcessBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        <com.example.demotest.mylibrary.ui.DrawApiView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <com.example.demotest.mylibrary.ui.DrawApiView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/download_btn_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载一个apk"/>
            <Button
                android:id="@+id/download_btn_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载第二个apk"/>
            <Button
                android:id="@+id/download_btn_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载第三个apk"/>
        </LinearLayout>
        <Button
            android:id="@+id/download_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="监听下载"/>
        <Button
            android:id="@+id/download_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止监听"/>

    </LinearLayout>
</RelativeLayout>
