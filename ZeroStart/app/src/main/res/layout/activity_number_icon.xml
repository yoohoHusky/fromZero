<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="tween 补间动画" />

                <Button
                    android:id="@+id/btn_tween_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="d"
                    android:textSize="12sp" />
                <Button
                    android:id="@+id/btn_tween_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="d"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/tween_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:src="@mipmap/ic_launcher" />
                <TextView
                    android:id="@+id/tween_text"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/num_icon_bg"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/white"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="frame 帧动画" />

                <Button
                    android:id="@+id/btn_frame"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="d"
                    android:layout_marginRight="40dp"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="value 属性动画" />

                <Button
                    android:id="@+id/btn_value"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="d"
                    android:textSize="12sp" />
                <Button
                    android:id="@+id/btn_object"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="d"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/object_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:src="@mipmap/ic_launcher" />
                <TextView
                    android:id="@+id/value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxx"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="CircularReveral     揭露动画" />

                <Button
                    android:id="@+id/btn_circular"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="d"
                    android:layout_marginRight="40dp"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/circular_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="传统act跳转" />

                <Button
                    android:id="@+id/btn_activity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="d"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="5.0新act跳转" />

                <Button
                    android:id="@+id/btn_act_explode"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ex"
                    android:textSize="12sp" />
                <Button
                    android:id="@+id/btn_act_slide"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="si"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_act_share"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:text="sh"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/im_activity_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:src="@mipmap/ic_launcher"
                    android:transitionName="share_icon"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="跳转到vector页面" />

                <Button
                    android:id="@+id/btn_vector"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="vector"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
