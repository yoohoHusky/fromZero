<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_src"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/palette_src_1"/>

        <RelativeLayout
            android:id="@+id/color_01"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_below="@id/iv_src">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/color_02"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_below="@id/iv_src"
            android:layout_toRightOf="@id/color_01">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色2"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/color_11"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_below="@id/color_01">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/color_12"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_below="@id/color_02"
            android:layout_toRightOf="@id/color_11">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色2"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/color_21"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_below="@id/color_11">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/color_22"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_below="@id/color_12"
            android:layout_toRightOf="@id/color_21">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色2"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/color_31"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_below="@id/color_21">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/color_32"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_below="@id/color_22"
            android:layout_toRightOf="@id/color_31">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色2"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
