<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yooho.zerostart.DownloadModelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_div_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"/>
        <EditText
            android:id="@+id/ed_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入完整的文字"/>
        <EditText
            android:id="@+id/ed_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="输入要过滤的关键字,多词用空格分开"/>
        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"/>

        <com.example.yooho.zerostart.ui.view.textview.KeyTextViewSpan
            android:id="@+id/tv_div_span"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdsdsdsdsd"
            app:span_text_view_key_color1="@android:color/holo_red_light"
            app:span_text_view_key_color2="@android:color/holo_green_light"
            app:span_text_view_key_color3="@android:color/holo_blue_light"
            />
    </LinearLayout>
</RelativeLayout>
